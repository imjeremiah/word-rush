    "zod": "^4.0.5",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.4.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "nodemon": "^3.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
