{
  "name": "@word-rush/server",
  "version": "1.0.0",
  "description": "Word Rush game server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.prod.json",
